<div class="score-pill" data-country-id="<%= country.id %>">
  <%= link_to country.name, Imon::Application.routes.url_helpers.country_path( country ), class: 'country-name', title: country.name %>
  <% if country.enough_data? %>
    <span class="header">score</span>
    <span class="imon-score"><%= country.score.round(2) %></span><a href="javascript:void(0);" class="user-score"></a>
  <% end %>
</div>
