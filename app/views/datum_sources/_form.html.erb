<%= semantic_form_for @datum_source do |f| %>
  <% if @datum_source.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@datum_source.errors.count, "error") %> prohibited this collection from being saved:</h2>

      <ul>
      <% @datum_source.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :admin_name %><br>
    <%= f.text_field :admin_name %>
  </div>

  <div class="field">
    <%= f.label :public_name %><br>
    <%= f.text_field :public_name %>
  </div>

  <div class="field">
    <%= f.label :short_name %><br>
    <%= f.text_field :short_name %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, size: '80x2' %>
  </div>

  <div class="field">
    <%= f.label :default_weight %><br>
    <%= f.text_field :default_weight %>
  </div>

  <div class="field">
    <%= f.label :multiplier %><br>
    <%= f.text_field :multiplier %>
  </div>

  <div class="field">
    <%= f.check_box :affects_score %>
    <%= f.label :affects_score %>
  </div>

  <div class="field">
    <%= f.input :provider_id, as: :select, collection: Provider.order( :name ) %>
  </div>

  <div class="field">
    <%= f.label :source_link %><br>
    <%= f.text_field :source_link %>
  </div>

  <div class="field">
    <%= f.label :display_class %><br>
    <%= f.text_field :display_class %>
  </div>

  <div class="field">
    <%= f.label :display_prefix %><br>
    <%= f.text_field :display_prefix %>
  </div>

  <div class="field">
    <%= f.label :display_suffix %><br>
    <%= f.text_field :display_suffix %>
  </div>

  <div class="field">
    <%= f.label :precision %><br>
    <%= f.text_field :precision %>
  </div>

  <div class="field">
    <%= f.check_box :normalized %>
    <%= f.label :normalized %>
  </div>

  <div class="field">
    <%= f.label :normalized_name %><br>
    <%= f.text_field :normalized_name %>
  </div>

  <div class="field">
    <p>Check invert to subtract a normalized value from 1. Only used when normalized is also checked.</p>
    <%= f.check_box :invert %>
    <%= f.label :invert %>
  </div>

  <div class="actions">
    <%= f.submit class: 'button' %>
  </div>
<% end %>
