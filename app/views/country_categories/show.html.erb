<% provide :title, "#{@country.name} #{@category.name}" %>

<article class="view country-data-view">
  <%= render partial: 'shared/widgets/category_selector' %>
  <h1 class="<%= "#{@category.slug}-1-bg" %>">
    <span class="category-name"><%= @category.name %></span> in <%= @country.name %>
    <%= render partial: 'countries/score_pill', locals: { country: @country } %>
  </h1>

  <div class="sub-content country-6-bg">
    <div class="main-column">
      <% if part_content( @country.iso3_code.downcase, @category.slug ).present? %>
        <div class="update block <%= @category.slug %>"><%= raw part_content( @country.iso3_code.downcase, @category.slug ) %></div>
      <% end %>
      <%= render partial: 'data/indicators', object: @category.data.most_recent.for( @country ) %>
      <%#= render partial: "data/grouped", locals: {data: @category.data.most_recent.for(@country)} %>
      
      <% if @category.name == 'Control' %>
        <div class="block">
          <h3>HERDICT</h3>
          <p>Interested in helping Herdict test for blocked websites in your country?</p>
          <a href="http://www.herdict.org/participate/reporter" target="_blank"><span style="display: block;">Click here to open the Herdict reporter!</span> <%= image_tag 'herdict_logo.png' %></a>
        </div>
      <% end %>

      <% @country.languages.each do |language|
        data = @category.data.most_recent.for(language)
        unless data.empty? %>
          <h3><%= language.name %></h3>
          <%= render partial: "data/grouped", locals: {data: data} %>
        <% end %>
      <% end %>
    </div>

    <div class="sidebar-column">
      <%= render partial: "countries/sidebar" %>
    </div>
  </div>
</article>
