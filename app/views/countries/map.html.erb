<% provide :title, "Countries" %>

<article class="view">

  <%= render partial: 'countries/map' %>

  <section class="map-index">
    <h2>Countries</h2>

    <ol>
      <% @scored_countries.each do |country| %>
        <li><%= render partial: 'countries/list_item', locals: {country: country} %></li>
      <% end %>
    </ol>

    <h2>Countries Without Scores</h2>

    <ol>
      <% @unscored_countries.each do |country| %>
        <li><%= link_to "#{country.name}", country %></li>
      <% end %>
    </ol>
  </section>

</article>
