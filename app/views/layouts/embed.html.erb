<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title><%= raw get_title( yield(:title) , params ) %> | Internet Monitor</title>
  <meta name="viewport" content="width=device-width">

  <link href='//fonts.googleapis.com/css?family=Open+Sans:400italic,400,700' rel='stylesheet' type='text/css'>
  <link href='//fonts.googleapis.com/css?family=Roboto+Condensed:400,700' rel='stylesheet' type='text/css'>
  
  <%= stylesheet_link_tag    "application", :media => "all" %>

  <%= csrf_meta_tags %>
</head>
<body class="<%= "#{ params[ :controller ].gsub( '/', '-' ) unless params[ :controller ].nil? } #{ params[ :action ] } #{ params[ :path ].gsub( '/', '-' ) if params[ :controller ] == 'refinery/pages' && params[ :action ] == 'show'}" %> layout-embed">

  <section class="main-content">
    <div class="body-margin">
      <%= yield %>
    </div>
  </section>

  <%= javascript_include_tag "application" %>

  <%= yield :javascripts if content_for?( :javascripts ) %>

  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-223559-17', 'auto');
    ga('send', 'pageview');
  </script>
  <%# uncomment for parameter debug %>
  <%#= debug(params) if Rails.env.development? %> 

</body>
</html>
